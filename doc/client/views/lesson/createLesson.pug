.form-group.row.align-items-center
    h5.col-3.text-success Create Lesson
    .data
        pre.mt-3.p-1.text-center.border.rounded
            code(json).mx-auto
                |  fname: 'createLesson'
p Registrar una nueva clase
p Nota:
ul
    li "service" : courses
    li "language" : "es"  para  Spanish o "en" para English
    li "fname" : nombre de la función 
br
br
.row.justify-content-center.mt-2
    .col.mx-2
        p.lead Body(JSON)
        div(style="height: 18rem" class=" bg-light rounded border")
            .data
                pre.p-2
                    code(json)
                        |{  
                        |    service<span class="text-danger">*</span>:courses,
                        |    fname<span class="text-danger">*</span>:createLesson,
                        |    id_course<span class="text-danger">*</span>:String,
                        |    name_lesson<span class="text-danger">*</span>:String,
                        |    url_video:String,
                        |    docs:String,
                        |    description:String,
                        |    language:String
                        |
                        |}


    .col.mx-2
        p.lead Response(JSON)
        div(style="height: 18rem" class=" bg-light rounded border")
            .data
                pre.p-2 
                    code(json)
                        |{
                        |    "message": String,
                        |    "lesson": {
                        |        "_id": String,
                        |        "id_course": String,
                        |        "name_lesson": String,
                        |        "url_video": String,
                        |        "description": String,
                        |        "docs":String,
                        |        "__v": number
                        |   }
                        |}

